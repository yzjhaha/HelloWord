<!--zh_tcwq/pages/integral/integralinfo/integralinfo.wxml-->
<view class="info">
  <view class="header">
    <image mode='aspectFill' class="infoimg" src="{{url}}{{spinfo.img}}"></image>
  </view>

  <view class="infoname">
    <view class="infotitle">
      <view>{{spinfo.name}}</view>
      <view class='sysl'>剩余{{spinfo.number}}个</view>
    </view>
    <view class="infocost">
      <text class="money">{{spinfo.money}}</text>
      <text>积分</text>
      <text class='money1' wx:if="{{spinfo.type=='1'}}">￥{{spinfo.hb_moeny}}</text>
    </view>
  </view>

  <view class="section">
    <view class="secheader">详情说明</view>
    <view class="sectioninfo">
      <view>
        <view class="infotitle">商品简介</view>
        <rich-text nodes='{{spinfo.goods_details}}'></rich-text>
      </view>
      <view>
        <view class="infotitle">兑换流程</view>
        <rich-text nodes='{{spinfo.process_details}}'></rich-text>
      </view>
      <view>
        <view class="infotitle">注意事项</view>
        <rich-text nodes='{{spinfo.attention_details}}'></rich-text>
      </view>
    </view>
  </view>
  <view class="foot"></view>
  <view class="footer">
    <button wx:if="{{spinfo.number=='0'}}" class="footbtn" style='opacity:0.6'>抱歉！您来晚了</button>
    <button wx:else class="footbtn" bindtap="duihuan">马上兑换</button>
  </view>

  <!--—————————兑换的弹框———————————————  -->
  <view class="bomb flex3" hidden="{{bomb}}">
    <view class="bomb_box">
      <view class="bomb_title">确定使用{{spinfo.money}}积分兑换？</view>
      <view class="bomb_con" wx:if="{{spinfo.type=='1'}}">兑换成功后将自动为您余额充值
        <text style='color:#ED414A'>{{spinfo.hb_moeny}}</text>
      </view>
      <view class="bomb_con" wx:if="{{spinfo.type=='2'}}">兑换实物需要您填写收货地址</view>
      <view class="bomb_foot">
        <view class="cancel" bindtap="cancel">取消</view>
        <view class="caomfirm" wx:if="{{spinfo.type=='1'}}" bindtap="caomfirm">兑换</view>
        <view class="caomfirm" wx:if="{{spinfo.type=='2'}}" bindtap="caomfirm">去填写</view>
      </view>
    </view>
  </view>
</view>
<view class="zhezhao" hidden="{{kpgg}}"></view>
<view class="kpgg" hidden="{{kpgg}}">
  <view class='txdz'>填写收货地址</view>
  <form bindsubmit="formSubmit">
    <view class="weui-cells weui-cells_after-title" style="font-size:30rpx;">
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">联系人</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" name="lxr" placeholder="请输入联系人" />
        </view>
      </view>
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">联系电话</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" name="tel" type="number" placeholder="请输入联系电话" />
        </view>
      </view>
      <view class="weui-cell weui-cell_access" hover-class="weui-cell_active" style='padding: 12px 15px;'>
        <view class="weui-cell__bd">收货地址</view>
        <view class="weui-cell__hd">{{ssq}}</view>
        <view class="weui-cell__ft" bindtap="dingwei">
          <image mode="aspectFit" src="../../images/shouhuodizhi@2x.png" style="margin-right: 5px;vertical-align: middle;width:40rpx; height: 40rpx;"></image>
        </view>
      </view>
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">详细地址</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" name="grxxdz" placeholder="请输入您的详细地址" value="{{xxdz}}" />
        </view>
      </view>
    </view>
    <view class='txdz1'>提示：请正确填写您兑换物品的收货地址</view>
    <button class="qddh" formType="submit">确定兑换</button>
  </form>
</view>
<view class='drawer_img' hidden="{{kpgg}}" bindtap="ycgg">
  <image src='../../images/x.png'></image>
</view>